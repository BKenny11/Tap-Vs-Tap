<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Play"
        android:id="@+id/button" android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" android:onClick="onClick"
        android:textSize="40sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Game"
        android:id="@+id/settingsButton"
        android:layout_below="@+id/button"
        android:onClick="openSettings"
        android:layout_alignLeft="@+id/button" android:layout_alignStart="@+id/button"
        android:textSize="40sp"
        android:layout_marginTop="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/aboutButton"
        android:layout_below="@+id/button"
        android:onClick="openAbout"
        android:layout_alignLeft="@+id/button" android:layout_alignStart="@+id/button"
        android:textSize="40sp"
        android:layout_marginTop="30dp"/>
</LinearLayout>
