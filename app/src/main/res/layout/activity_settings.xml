<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.brenkenny.tapvstap.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Number of lives"
        android:id="@+id/textView" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Difficulty Speed"
        android:id="@+id/textView2"
        android:layout_marginTop="51dp" android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView" android:layout_alignStart="@+id/textView"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Page"
        android:id="@+id/button2"
        android:layout_above="@+id/button3" android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/button3" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background Music"
        android:id="@+id/switch1"
        android:layout_marginTop="51dp" android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound Effects"
        android:id="@+id/switch2"
        android:layout_marginTop="68dp" android:layout_below="@+id/switch1"
        android:layout_centerHorizontal="true"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power Ups"
        android:id="@+id/switch3"
        android:layout_centerVertical="true" android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button4"
        android:layout_below="@+id/textView2" android:layout_alignRight="@+id/switch1"
        android:layout_alignEnd="@+id/switch1"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button5"
        android:layout_below="@+id/textView2" android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"/>
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="-" android:id="@+id/button6"
            android:layout_below="@+id/textView" android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5"/>
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="+" android:id="@+id/button7"
            android:layout_below="@+id/textView" android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView" android:layout_centerHorizontal="true"/>
</RelativeLayout>
